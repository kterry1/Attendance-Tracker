generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

model UserRole {
  id     Int @id @default(autoincrement())
  role   Role
  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  roles UserRole[]
}
